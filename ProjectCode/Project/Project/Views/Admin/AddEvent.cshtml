
@{
    ViewBag.Title = "Event";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model Project.Models.event_object


<div class="page-wrap" class="banner_fix" style="padding-top:2rem">

    <div class="container" id="settings_box"  > 
        @if (ViewBag.Update == false)
        {
            <div class="box_header">
                <h3>Voeg een nieuw evenement toe</h3>
            </div>
            using (Html.BeginForm("AddEvent", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.ValidationSummary()
                @Html.HiddenFor(x => x.ID);
                <div class="form-group">
                    <label>
                        Name
                    </label>
                    @Html.TextBoxFor(evnt => evnt.Name, new { @class = "form-control", data_val = "true", data_val_required = "Fill in a name" })
                </div>

                <div class="form-group">
                    <label>
                        Description
                    </label>
                    @Html.TextBoxFor(evnt => evnt.Description, new { @class = "form-control", data_val = "true", data_val_required = "Fill in a name" })
                </div>

                <div class="form-group">
                    <label>
                        DateTime
                    </label>
                    @Html.TextBoxFor(evnt => evnt.DT, new { @class = "form-control", data_val = "true", data_val_required = "Fill in a name" })
                </div>

                <div class="form-group">
                    <label>
                        Genres
                    </label>
                    @Html.DropDownListFor(evnt => evnt.Genre, (ViewBag.Genres as ICollection<SelectListItem>).ToList(), htmlAttributes: new { @class = "form-control", data_val = "true", data_val_required = "Fill in a name" })
                </div>

                <div class="form-group">
                    <label>
                        Bars
                    </label>
                    @Html.DropDownListFor(evnt => evnt.Barname, (ViewBag.Bars as ICollection<SelectListItem>).ToList(), htmlAttributes: new { @class = "form-control", data_val = "true", data_val_required = "Fill in a name" })
                </div>




                <div class="form-group">
                    <button type="submit" class="btn btn-default btn-green-default settings_button" id="settings_btn">Submit changes</button>
                </div>
            }
        }
        else
        {
            <div class="box_header">
                <h3>Update evenement</h3>
            </div>
            using (Html.BeginForm("UpdateEvent", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.ValidationSummary()
                @Html.HiddenFor(x => x.ID);
                <div class="form-group">
                    <label>
                        Name
                    </label>
                    @Html.TextBoxFor(evnt => evnt.Name, new {  @class = "form-control", data_val = "true", data_val_required = "Fill in a name" })
                </div>

                <div class="form-group">
                    <label>
                        Description
                    </label>
                    @Html.TextBoxFor(evnt => evnt.Description, new { @class = "form-control", data_val = "true", data_val_required = "Fill in a name" })
                </div>

                <div class="form-group">
                    <label>
                        DateTime
                    </label>
                    @Html.TextBoxFor(evnt => evnt.DT, new { placeholder = "Email", @class = "form-control", data_val = "true", data_val_required = "Fill in a name" })
                </div>

                <div class="form-group">
                    <label>
                        Genres
                    </label>
                    @Html.DropDownListFor(evnt => evnt.Genre, (ViewBag.Genres as ICollection<SelectListItem>).ToList(), htmlAttributes: new { @class = "form-control", data_val = "true", data_val_required = "Fill in a name" })
                </div>

                <div class="form-group">
                    <label>
                        Bars
                    </label>
                    @Html.DropDownListFor(evnt => evnt.Barname, (ViewBag.Bars as ICollection<SelectListItem>).ToList(), htmlAttributes: new { @class = "form-control", data_val = "true", data_val_required = "Fill in a name" })
                </div>




                <div class="form-group">
                    <button type="submit" class="btn btn-default btn-green-default settings_button" id="settings_btn">Submit changes</button>
                </div>
            }
        }
    </div>
</div>